<!doctype html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}" />
  {% endif %} 
  <meta name="theme-color" content="" />
  <link rel="canonical" href="{{ canonical_url }}">

  {% render 'favicon-snippet' %}
  {% render 'title-snippet' %}
  
  {{ content_for_header }}

  {% render "style-tags" %}
  {% render "script-tags" %}
</head>
<body class="{% if template contains "customers" %}main-customer{% elsif template contains "404" %}main-404{% else %}main-{{ template.name }}{% endif %}">
  <main role="main">
    {{ content_for_layout }}
  </main>
</body>
</html>