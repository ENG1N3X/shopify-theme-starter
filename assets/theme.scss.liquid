section.cart {
	position: fixed;
	top: 0;
	right: 0;
	z-index: 999999;

	max-width: 420px;
	width: 100%;
	height: 100vh;

	box-shadow: -8px 0px 30px -18px #000;
	background-color: rgba(255, 255, 255, 0.95);

	transition: transform 0.3s linear, opacity 0.3s linear;
	transform: translateX(100%);
	opacity: 0;
	&.active {
		transition: transform 0.3s linear, opacity 0.3s linear;
		transform: translateX(0);
		opacity: 1;
	}
	.no-items {
		display: block;
		text-align: center;
		font-family: "Montserrat", sans-serif;
		font-weight: 500;
		font-size: rem(14);
		line-height: rem(16);
		letter-spacing: -0.03em;
		text-transform: uppercase;
		color: #000;
		padding: 30px 0;
	}
	.content-loader {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: calc(100% - 50px);
	}
	.cart-form {
		padding: 20px;
		height: 100%;
	}
	.cart-header {
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		.heading {
			font-family: "Montserrat", sans-serif;
			font-weight: 500;
			font-size: rem(22);
			line-height: rem(24);
			color: #000;
			margin: 0;
			padding: 10px 0;
			display: flex;
			align-items: center;
			span {
				display: inline-block;
				font-size: rem(14);
				line-height: rem(14);
			}
		}
		button {
			i {
				font-size: 22px;
				color: #000;
			}
		}
	}
	.cart-main {
		max-height: calc(100vh - 210px);
		overflow-y: auto;
		.cart-item {
			position: relative;
			display: flex;
			align-items: stretch;
			padding: 15px 0;
			.image {
				display: inline-block;
				width: 20%;
			}
			.info {
				display: flex;
				flex-direction: column;
				justify-content: space-between;
				width: 80%;
				padding-left: 20px;
				& > div {
					display: flex;
					align-items: center;
					justify-content: space-between;
					&:first-child {
						padding-top: 8px;
					}
				}
				.title {
					display: block;
					font-family: "Montserrat", sans-serif;
					font-weight: 600;
					font-size: rem(11);
					line-height: rem(17);
					letter-spacing: 0.08em;
					text-transform: uppercase;
					color: #000000;
					text-decoration: none;
					max-width: 160px;
				}
				.quantity {
					display: block;
					font-family: "Montserrat", sans-serif;
					font-weight: 600;
					font-size: rem(9);
					line-height: rem(11);
					letter-spacing: 0.08em;
					text-transform: uppercase;
					color: #9a9a9a;
				}
				.money {
					display: block;
					font-family: "Montserrat", sans-serif;
					font-weight: 600;
					font-size: rem(12);
					letter-spacing: 0.08em;
					text-transform: uppercase;
					color: #207212;
				}
			}
			button {
				i {
					color: #000;
				}
			}
		}
	}
	.cart-footer {
		padding-top: 20px;
		padding-bottom: 5px;
		border-top: 1px solid rgba(0, 0, 0, 0.09);
		.total,
		.money {
			display: inline-block;
			font-family: "Montserrat", sans-serif;
			font-weight: 600;
			font-size: rem(9);
			line-height: rem(11);
			letter-spacing: 0.08em;
			text-transform: uppercase;
			color: #343434;
		}
		.money {
			font-size: rem(14);
		}
	}
}

body.customer-template {
	section.customer {
		padding: 100px 0;
		min-height: 65vh;
		.grid-container {
			max-width: 800px;
			&.fluid {
				max-width: 1200px;
			}
		}
		.heading {
			font-family: "Montserrat", sans-serif;
			font-weight: normal;
			font-weight: bold;
			font-size: rem(32);
			margin: 0;
		}
		.subheading {
			text-align: center;
			font-size: rem(26);
		}
		.form-login,
		.form-recover,
		.form-register,
		.form-address,
		.form-reset-activate {
			.form-title {
				font-family: "Montserrat", sans-serif;
				font-weight: normal;
				font-weight: normal;
				font-size: rem(40);
				text-align: center;
				margin: 0;
				margin-bottom: 20px;
				padding-bottom: 20px;
				border-bottom: 1px solid #ccc;
			}
			input,
			select {
				display: block;
				width: 100%;
				padding: 10px 5px;
			}
			select {
				margin-bottom: 20px;
			}
			input[type="email"],
			input[type="password"],
			input[type="text"] {
				cursor: pointer;
				height: auto;
				font-size: rem(14);
				background-color: #fff !important;
				border: 1px solid #ccc !important;
				margin: 0;
				margin-bottom: 20px;
				transition: opacity 0.3s linear;
				opacity: 0.6;
				&:hover {
					transition: opacity 0.3s linear;
					opacity: 1;
				}
				&:active,
				&:focus {
					box-shadow: none;
				}
			}
		}
		.info-text {
			display: block;
			margin-bottom: 10px;
		}
		.info-link {
			color: #000;
			transition: opacity 0.3s linear;
			&:hover {
				transition: opacity 0.3s linear;
				opacity: 0.8;
			}
		}
		.btn {
			max-width: 100%;
			&.primary {
				margin-bottom: 20px;
			}
			&.btn-switch-forgot {
				text-decoration: underline;
				margin-left: auto;
				margin-bottom: 10px;
			}
			&.btn-paginate {
				width: 150px;
				margin: 5px;
				padding: 10px;
				text-transform: uppercase;
				border: 1px solid #000;
			}
		}
	}
}
