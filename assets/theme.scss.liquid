// px to rem
$browser-context: 14;
@function rem($pixels, $context: $browser-context) {
	@return #{$pixels/$context}rem;
}

// padding for submit button page
.shopify-challenge__container {
	padding: 200px 0;
	@media (max-width: 639px) {
		padding: 100px 0;
	}
}

// z-index`s
$z-header: 1;
$z-footer: 1;

// keyframes
@keyframes anim-rotate {
	from {
		transform: rotate(0deg);
	}
	to {
		transform: rotate(360deg);
	}
}

body {
	font-family: "Montserrat", sans-serif;
	font-weight: 400;
	line-height: normal;
	font-size: rem(14);
}

input,
button,
form,
select,
textarea {
	&:focus,
	&:active {
		box-shadow: none;
		outline: none;
	}
}

a[href],
button:not(:disabled),
.hover-opacity[href] {
	transition: opacity 0.3s linear;
	&:hover {
		transition: opacity 0.3s linear;
		opacity: 0.6;
	}
}

.pagination {
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 50px 0;
	a {
		display: block;
		margin: 0 20px;
	}
}

.loader {
	animation: anim-rotate 2s linear infinite;
	width: 30px;
	height: 30px;
	border-radius: 50%;
	border: 1px solid #000;
	border-left: none;
	margin: 0 auto;
}

.product-variants {
	display: flex;
	flex-wrap: wrap;
	.product-variant {
		position: relative;
		margin: 5px;
		display: inline-block;
		input {
			position: absolute;
			z-index: -1;
			opacity: 0;
			&:disabled {
				appearance: none;
				& ~ label {
					color: #fff !important;
					background-color: #3d3d3d !important;
					cursor: default;
				}
			}
			&:checked {
				& ~ label {
					color: #fff;
					background-color: #000;
				}
			}
			& ~ label {
				display: flex;
				justify-content: center;
				align-items: center;
				// min-width: 70px;
				// max-width: 100px;
				padding: 10px;
				text-align: center;
				font-family: "termina", sans-serif;
				font-weight: 500;
				font-size: rem(11);
				color: #222222;
				border: 1px solid #000000;
				cursor: pointer;
				transition: color 0.3s linear, background-color 0.3s linear;
				&:hover {
					transition: color 0.3s linear, background-color 0.3s linear;
					color: #fff;
					background-color: #000;
				}
			}
		}
	}
}

.btn {
	display: inline-block;
	cursor: pointer;
	text-align: center;
	border: none;
	text-decoration: none;
	&:disabled {
		cursor: not-allowed;
		appearance: none;
	}
	&.primary {
		font-family: "Montserrat", sans-serif;
		font-style: normal;
		font-weight: normal;
		font-size: rem(16);
		line-height: 1.25;
		letter-spacing: -0.045em;
		text-transform: uppercase;
		color: #fff;
		background: #000;
		padding: 10px 20px;
	}
	&.secondary {
		font-family: "Montserrat", sans-serif;
		font-style: normal;
		font-weight: normal;
		font-size: rem(16);
		line-height: 1.25;
		letter-spacing: -0.045em;
		text-transform: uppercase;
		color: #000;
		background: #fff;
		padding: 10px 20px;
	}
}

