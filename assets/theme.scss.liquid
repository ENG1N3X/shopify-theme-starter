section.cart-ajax {
	position: fixed;
	top: 0;
	right: 0;
	max-width: 400px;
	width: 100%;
	height: 100vh;
	background: #fff;
	box-shadow: 0 0 4px #101010;
	padding: 10px;
	display: flex;
	flex-direction: column;
	z-index: 30;
	transform: translateX(105%);
	transition: transform 0.3s linear;
	@media (max-width: 639px) {
		height: 83vh;
	}
	&.active {
		transition: transform 0.3s linear;
		transform: translate(0);
	}

	.cart-header {
		button {
			cursor: pointer;
			transition: opacity 0.3s linear;
			&:hover {
				transition: opacity 0.3s linear;
				opacity: 0.8;
			}
		}
		.h2 {
			margin: 0;
		}
		.item_count {
			min-width: 30px;
			min-height: 30px;
			width: 30px;
			height: 30px;
			border-radius: 50%;
			background: #101010;
			color: #f7f7f7;
			display: flex;
			justify-content: center;
			align-items: center;
			margin-left: auto;
		}
	}

	.cart-body {
		max-height: calc(100vh - 250px);
		overflow-y: auto;
		@media (max-width: 639px) {
			max-height: calc(83vh - 250px);
		}
		padding: 20px 0;
		.cart-items {
			.cart-item {
				display: flex;
				align-items: center;
				position: relative;
				border-bottom: 1px solid rgba(16, 16, 16, 0.6);
				padding: 5px 0;
				.image {
					display: block;
					position: relative;
					width: 30%;
					padding: 2px;
					img {
						display: block;
						max-width: 100%;
						width: 100%;
						height: 100%;
						object-fit: contain;
					}
				}
				.content {
					width: 70%;
					padding: 0 5px;
					.title {
						display: block;
						font-family: "AGCenturionC-Bold", sans-serif;
						font-size: 13px;
						line-height: 1.25;
						text-decoration: none;
						color: #101010;
						margin-bottom: 5px;
						&:hover {
							text-decoration: underline;
						}
					}
					.variant {
						display: block;
						font-family: "AGCenturionC", sans-serif;
						font-size: 13px;
						line-height: 1;
						text-decoration: none;
						color: #101010;
						margin-bottom: 5px;
					}
					.quantity-box {
						display: flex;
						align-items: center;
						button {
							display: inline-block;
							cursor: pointer;
							font-family: "AGCenturionC", sans-serif;
						}
						input {
							display: inline-block;
							vertical-align: middle;
							width: 30px;
							height: 30px;
							padding: 0;
							margin: 0;
							text-align: center;
							border: none;
							font-family: "AGCenturionC", sans-serif;
							color: #101010;
						}
					}
				}
				button.remove-from-basket {
					position: absolute;
					right: 5px;
					bottom: 5px;

					display: block;
					cursor: pointer;
					font-family: "Arial", sans-serif;
					font-style: normal;
					font-weight: normal;
					text-transform: uppercase;
					font-size: 10px;
					&:hover {
						text-decoration: underline;
					}
				}
			}

			.no-items {
				display: block;
				font-family: "Arial", sans-serif;
				font-style: normal;
				font-weight: normal;
				font-size: 14px;
				line-height: 20px;
				text-align: center;
				color: #101010;
				text-align: center;
			}
		}
	}

	.cart-footer {
		margin-top: auto;
		.shipping-taxes {
			display: block;
			font-family: "Arial", sans-serif;
			font-style: normal;
			font-weight: normal;
			font-size: 14px;
			line-height: 20px;
			text-align: center;
			color: #101010;
			text-align: center;
			margin: 15px 0;
		}
		.btn.primary {
			width: 100%;
			padding-left: 0;
			padding-right: 0;
		}
	}
}

body.main-customer {
	section.customer {
		padding: 100px 0;
		min-height: 65vh;
		.grid-container {
			max-width: 800px;
			&.fluid {
				max-width: 1200px;
			}
		}
		.heading {
			font-family: "Montserrat", sans-serif;
			font-weight: normal;
			font-weight: bold;
			font-size: rem(32);
			margin: 0;
		}
		.subheading {
			text-align: center;
			font-size: rem(26);
		}
		.form-login,
		.form-recover,
		.form-register,
		.form-address,
		.form-reset-activate {
			.form-title {
				font-family: "Montserrat", sans-serif;
				font-weight: normal;
				font-weight: normal;
				font-size: rem(40);
				text-align: center;
				margin: 0;
				margin-bottom: 20px;
				padding-bottom: 20px;
				border-bottom: 1px solid #ccc;
			}
			input,
			select {
				display: block;
				width: 100%;
				padding: 10px 5px;
			}
			select {
				margin-bottom: 20px;
			}
			input[type="email"],
			input[type="password"],
			input[type="text"] {
				cursor: pointer;
				height: auto;
				font-size: rem(14);
				background-color: #fff !important;
				border: 1px solid #ccc !important;
				margin: 0;
				margin-bottom: 20px;
				transition: opacity 0.3s linear;
				opacity: 0.6;
				&:hover {
					transition: opacity 0.3s linear;
					opacity: 1;
				}
				&:active,
				&:focus {
					box-shadow: none;
				}
			}
		}
		.info-text {
			display: block;
			margin-bottom: 10px;
		}
		.info-link {
			color: #000;
			transition: opacity 0.3s linear;
			&:hover {
				transition: opacity 0.3s linear;
				opacity: 0.8;
			}
		}
		.btn {
			max-width: 100%;
			&.primary {
				margin-bottom: 20px;
			}
			&.btn-switch-forgot {
				text-decoration: underline;
				margin-left: auto;
				margin-bottom: 10px;
			}
			&.btn-paginate {
				width: 150px;
				margin: 5px;
				padding: 10px;
				text-transform: uppercase;
				border: 1px solid #000;
			}
		}
	}
}
